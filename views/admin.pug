extends base

block content
    h1.dashboard__header Admin Page
    div.create__user
        h3 Create User
        form.create__user__form(id="create-user-form")
            div.form-group
                label(for="name") Name
                input.form-control(type="text", name="name", id="name", required)
            div.form-group
                label(for="email") Email
                input.form-control(type="email", name="email", id="email", required)
            div.form-group
                label(for="password") Password
                input.form-control(type="password", name="password", id="password", required)
            div.form-group
                label(for="password") Confirm Password
                input.form-control(type="password", name="password", id="passwordConfirm", required)
            div.form-group
                label(for="role") Role
                select.form-control(name="role", id="role", required)
                    option(value="user") User
                    option(value="admin") Admin
            button.btn.btn-primary.button__create__user(type="submit") Create User


    div.users__list
        h3 Users List
        table.table.table-striped.table-bordered
            thead
                tr
                    th Name
                    th Email
                    th Role
                    th Actions
            tbody
                each user in users
                    tr
                        td= user.name
                        td= user.email
                        td= user.role
                        td
                            button.btn.btn-danger.button__delete.m-1(type="button", data-user-id=user._id) Delete
                            





        
